@model List<Presupuesto>

<section class="container mt-5">
<h1 class="text-center mb-4">Lista de Presupuestos</h1>
<ul>
    @foreach (Presupuesto presu in Model) {
        <li class="list-group-item d-flex justify-content-between align-items-center">
                <section>
                    <span class="mr-3">@presu.IdPresupuesto</span>
                    <span class="mr-3">@presu.NombreDestinatario</span>
                </section>
                <section>
                    <a class="btn btn-warning btn-sm me-2" asp-controller="Presupuesto" asp-action="MostrarDetallePresupuesto" asp-route-id="@presu.IdPresupuesto">Ver Detalle</a>
                </section>
                <section>
                    <a class="btn btn-warning btn-sm me-2" asp-controller="Presupuesto" asp-action="ModificarPresupuesto" asp-route-id="@presu.IdPresupuesto">Modificar</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Presupuesto" asp-action="EliminarPresupuesto" asp-route-id="@presu.IdPresupuesto">Eliminar</a>
                </section>
        </li>
    }
</ul>
<section class="mt-3 text-center">
    <a class="btn btn-success" asp-controller="Presupuesto" asp-action="CrearPresupuesto">Agregar nuevo presupuesto</a>
</section>
</section>
