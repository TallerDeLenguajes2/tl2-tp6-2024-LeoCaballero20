@model Producto

<section class="container mt-5">
        <h1 class="text-center mb-4">Crear Nuevo Producto</h1>
        <form asp-controller="Producto" asp-action="ModificarProducto" method="post">
            <section class="mb-3">
                <label for="descripcion" class="form-label">Descripci√≥n</label>
                <input type="text" class="form-control" id="descripcion" name="Descripcion" rows="3" required value="@Model.Descripcion">
            </section>
            <section class="mb-3">
                <label for="precio" class="form-label">Precio</label>
                <input type="number" step="0.01" class="form-control" id="precio" name="Precio" required value="@Model.Precio">
            </section>
            <section>
                <input type="hidden" id="idProducto" name="IdProducto" value="@Model.IdProducto">
            </section>
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a asp-controller="Producto" asp-action="ListarProductos" class="btn btn-danger">Cancelar</a>
        </form>
</section>