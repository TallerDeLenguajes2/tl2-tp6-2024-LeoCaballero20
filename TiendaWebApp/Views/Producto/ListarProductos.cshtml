@model List<Producto>

<section class="container mt-5">
<h1 class="text-center mb-4">Lista de Productos</h1>
<ul>
    @foreach (Producto producto in Model) {
        <li class="list-group-item d-flex justify-content-between align-items-center">
                <section>
                    <span class="mr-3">@producto.Descripcion</span>
                    <span>$@producto.Precio</span>
                </section>
                <section>
                    <a class="btn btn-warning btn-sm me-2" asp-controller="Producto" asp-action="ModificarProducto" asp-route-id="@producto.IdProducto">Modificar</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Producto" asp-action="EliminarProducto" asp-route-id="@producto.IdProducto">Eliminar</a>
                </section>
        </li>
    }
</ul>
<section class="mt-3 text-center">
    <a class="btn btn-success" asp-controller="Producto" asp-action="CrearProducto">Agregar nuevo producto</a>
</section>
</section>
